{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "batchAccounts_mybatchanoop_name": {
            "defaultValue": "mybatchanoop",
            "type": "String"
        },
        "storageAccounts_anoopbatchstorage_externalid": {
            "defaultValue": "/subscriptions/48c1251b-e90f-4de1-beb1-b305c7c6c1c7/resourceGroups/An-Resources/providers/Microsoft.Storage/storageAccounts/anoopbatchstorage",
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Batch/batchAccounts",
            "apiVersion": "2024-07-01",
            "name": "[parameters('batchAccounts_mybatchanoop_name')]",
            "location": "eastus",
            "identity": {
                "type": "None"
            },
            "properties": {
                "autoStorage": {
                    "storageAccountId": "[parameters('storageAccounts_anoopbatchstorage_externalid')]",
                    "authenticationMode": "StorageKeys"
                },
                "poolAllocationMode": "BatchService",
                "publicNetworkAccess": "Enabled",
                "networkProfile": {
                    "accountAccess": {
                        "defaultAction": "Allow",
                        "ipRules": []
                    },
                    "nodeManagementAccess": {
                        "defaultAction": "Allow",
                        "ipRules": []
                    }
                },
                "encryption": {
                    "keySource": "Microsoft.Batch"
                },
                "allowedAuthenticationModes": [
                    "SharedKey",
                    "AAD"
                ]
            }
        },
        {
            "type": "Microsoft.Batch/batchAccounts/pools",
            "apiVersion": "2024-07-01",
            "name": "[concat(parameters('batchAccounts_mybatchanoop_name'), '/mybatchpool')]",
            "dependsOn": [
                "[resourceId('Microsoft.Batch/batchAccounts', parameters('batchAccounts_mybatchanoop_name'))]"
            ],
            "properties": {
                "displayName": "mybatchpool",
                "vmSize": "STANDARD_D2S_V3",
                "interNodeCommunication": "Disabled",
                "taskSlotsPerNode": 1,
                "taskSchedulingPolicy": {
                    "nodeFillType": "Pack"
                },
                "deploymentConfiguration": {
                    "virtualMachineConfiguration": {
                        "imageReference": {
                            "publisher": "microsoftwindowsserver",
                            "offer": "windowsserver",
                            "sku": "2019-datacenter-core",
                            "version": "latest"
                        },
                        "nodeAgentSkuId": "batch.node.windows amd64",
                        "osDisk": {
                            "caching": "None",
                            "managedDisk": {
                                "storageAccountType": "Standard_LRS"
                            }
                        },
                        "windowsConfiguration": {
                            "enableAutomaticUpdates": false
                        },
                        "nodePlacementConfiguration": {
                            "policy": "Regional"
                        }
                    }
                },
                "networkConfiguration": {
                    "publicIPAddressConfiguration": {
                        "provision": "BatchManaged"
                    },
                    "dynamicVnetAssignmentScope": "None",
                    "enableAcceleratedNetworking": false
                },
                "scaleSettings": {
                    "fixedScale": {
                        "targetDedicatedNodes": 2,
                        "targetLowPriorityNodes": 0,
                        "resizeTimeout": "PT15M"
                    }
                },
                "targetNodeCommunicationMode": "Default",
                "upgradePolicy": {
                    "mode": "Manual",
                    "automaticOSUpgradePolicy": {
                        "disableAutomaticRollback": false,
                        "enableAutomaticOSUpgrade": false,
                        "useRollingUpgradePolicy": false,
                        "osRollingUpgradeDeferral": false
                    },
                    "rollingUpgradePolicy": {
                        "maxBatchInstancePercent": 20,
                        "maxUnhealthyInstancePercent": 20,
                        "maxUnhealthyUpgradedInstancePercent": 20,
                        "pauseTimeBetweenBatches": "P0D",
                        "rollbackFailedInstancesOnPolicyBreach": false
                    }
                }
            }
        }
    ]
}
